<!DOCTYPE html>
<html lang="en">

  <%- include('header')%>

  <body id="page-top">

    <%- include('navbar') %>

    <div id="wrapper">

      <!-- Sidebar -->
      <ul class="sidebar navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/users-page">
            <i class="fas fa-fw fa-users"></i>
            <span>Clients</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/catalog-page">
            <i class="fas fa-fw fa-table"></i>
            <span>Catalogue Produits</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/orders-list-page">
            <i class="fas fa-shopping-basket"></i>
            <span>Commandes</span></a>
        </li>


        <li class="nav-item">
          <a class="nav-link" href="/charts">
            <i class="fas fa-fw fa-chart-area"></i>
            <span>Charts</span></a>
        </li>
      </ul>

      <div id="content-wrapper">

        <div class="container-fluid">

          
          <% 
          for( let i = 0; i < admin.tasks.length; i++ ) { 
          %>

            <div class="list-group">
              <a href="#" class="list-group-item list-group-item-action <%= admin.tasks[i].dateCloture ? "bg-success" : ((admin.tasks[i].dateDue.getTime() <= Date.now()) ? "bg-danger" : "")%>"> 
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= admin.tasks[i].category %></h5> 
                  <small><%= transformDateUtcInEuro(admin.tasks[i].dateInsert) %></small>
                </div>
                <p class="mb-1"><%= admin.tasks[i].name %></p>
                <small><%= transformDateUtcInEuro(admin.tasks[i].dateDue) %></small>
                <small><%= admin.tasks[i].dateCloture ? "Cloturé le: " + transformDateUtcInEuro(admin.tasks[i].dateCloture) : ((admin.tasks[i].dateDue.getTime() <= Date.now()) ? "Échéance dépassée: " + transformDateUtcInEuro(admin.tasks[i].dateDue) : "Echéance: " + transformDateUtcInEuro(admin.tasks[i].dateDue)) %></small>

              </a>
            </div>

          <% 
          } 
          %>
          


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
