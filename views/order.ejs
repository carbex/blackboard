<!DOCTYPE html>
<html lang="en">

  <%- include('header')%>

  <body id="page-top">

    <%- include('navbar') %>

    <div id="wrapper">

      <!-- Sidebar -->
      <ul class="sidebar navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/users-page">
            <i class="fas fa-fw fa-users"></i>
            <span>Clients</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/catalog-page">
            <i class="fas fa-fw fa-table"></i>
            <span>Catalogue Produits</span></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/orders-list-page">
            <i class="fas fa-shopping-basket"></i>
            <span>Commandes</span></a>
        </li>


        <li class="nav-item">
          <a class="nav-link" href="/charts">
            <i class="fas fa-fw fa-chart-area"></i>
            <span>Charts</span></a>
        </li>
      </ul>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-table"></i>
             Detail de la commande</div>
            <div class="card-body">
              <div class="table-responsive">
                <table id="order-info" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <thead>
                      <tr>
                        <th>Date Commande</th>
                        <th>Total</th>
                        <th>Frais de port</th>
                        <th>Payée</th>
                        <th>Date Paiement</th>
                        <th>Expédiée</th>
                        <th>Date Exp</th>
                        <th>Adresse</th>
                        <th>Ville</th>
                        <th>Code postal</th>

                      </tr>
                    </thead>
                  </thead>

                  <tbody>
                    <tr>
                      <td><%= order.date_insert %></td>
                      <td><%= order.total %></td>
                      <td><%= order.shipping_cost %></td>
                      <td class="<%= (order.status_payment === 'validated') ? "status-success bg-success" : ((order.status_payment === 'waiting') ? "status-secondary bg-secondary" : "status-danger bg-danger") %>"><i class="fas fa-circle"></i></td>
                      <td><%= (order.date_payment && order.status_payment === 'validated') ? order.date_payment : "-" %></td>
                      <td class="<%= order.status_shipment === true ? "status-success bg-success" : "status-secondary" %>"><i class="fas fa-circle"></i></td>
                      <td><%= (order.date_shipment && order.status_shipment === true) ? order.date_shipment : "-" %></td>
                      <td><%= order.delivery_address %></td>
                      <td><%= order.delivery_city %></td>
                      <td><%= order.delivery_zipcode %></td>
                    </tr>
                  </tbody>
                </table>

                <table id="product-list" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Libelle</th>
                      <th>Description</th>
                      <th>Poids</th>
                      <th>Prix</th>
                      <th>Image</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Libelle</th>
                      <th>Description</th>
                      <th>Poids</th>
                      <th>Prix</th>
                      <th>Image</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% for( let i = 0; i < order.articles.length; i++ ) { %>
                      <tr>
                        <td><%= order.articles[i].title %></td>
                        <td><%= order.articles[i].description %></td>
                        <td><%= order.articles[i].weight %></td>
                        <td><%= order.articles[i].price %></td>
                        <td><img src="/images/<%= order.articles[i].img %>"></td>
                      </tr>
                    <% } %>

                  </tbody>
                </table>


              </div>
            </div>
          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
